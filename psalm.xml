<?xml version="1.0"?>
<!-- niveau erreur progressif de 8 à 1 -->
<psalm
    errorLevel="3"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
>
    <!--ajouter les repertoires de traitement-->
    <projectFiles>
        <directory name="src" />
        <directory name="config" />
        <directory name="templates" />
        <directory name="tests" />
        <!--specifier les repertoires à ne pas traiter-->
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <!--обработчик проблем
    par type : retour de type moins specifique et retour de type invalide-->
    <issueHandlers>
        <LessSpecificReturnType errorLevel='info' />
    </issueHandlers>
        <issueHandlers>
        <InvalidReturnType errorLevel='error' />
    </issueHandlers>
</psalm>

{% extends 'base.html.twig' %}

{% block title %}Analyse your PHP code{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
<div class="container mt-5" style="width: 40%;">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
    {% endfor %}
    <div class="card border-dark mb-3" style=color:aliceblue;">
        <div class="card-header">Analyser Votre Code</div>
        <div class="card-body">
            {{ form (form) }}
        </div>
    </div>
</div>
{% endblock %}